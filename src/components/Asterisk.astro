---
const { content, identifier = '*' } = Astro.props;
---

<span class="tool" data-tip={content} tabindex="1">{identifier}</span>

<style>
  .tool {
    color: #e91e63;
    font-family: monospace;
    white-space: nowrap;
    font-size: 1.3em;
    top: -5px;
    right: -2px;
    cursor: pointer;
    position: relative;
  }

  .tool {
  }

  .tool:focus {
    outline: none;
  }

  /*== common styles for both parts of tool tip ==*/
  .tool::before,
  .tool::after {
    left: 50%;
    opacity: 0;
    position: absolute;
    z-index: -100;
  }

  .tool:hover::before,
  .tool:focus::before,
  .tool:hover::after,
  .tool:focus::after {
    opacity: 1;
    transform: scale(1) translateY(0);
    z-index: 100;
  }

  /*== pointer tip ==*/
  .tool::before {
    border-style: solid;
    border-width: 1em 0.75em 0 0.75em;
    border-color: #3e474f transparent transparent transparent;
    bottom: 100%;
    content: '';
    margin-left: -0.5em;
    transition: all 0.05s cubic-bezier(0.84, -0.18, 0.31, 1.26),
      opacity 0.05s 0.5s;
    transform: scale(0.6) translateY(-90%);
  }

  .tool:hover::before,
  .tool:focus::before {
    transition: all 0.05s cubic-bezier(0.84, -0.18, 0.31, 1.26) 0s;
  }

  /*== speech bubble ==*/
  .tool::after {
    background: #3e474f;
    border-radius: 0.25em;
    bottom: 180%;
    color: #edeff0;
    content: attr(data-tip);
    margin-left: -8.75em;
    padding: 1em;
    transition: all 0.05s cubic-bezier(0.84, -0.18, 0.31, 1.26) 0s;
    transform: scale(0.6) translateY(50%);
    width: 17.5em;
    font-size: 1em;
  }

  .tool:hover::after,
  .tool:focus::after {
    transition: all 0.05s cubic-bezier(0.84, -0.18, 0.31, 1.26);
  }

  @media (max-width: 760px) {
    .tool::after {
      font-size: 0.75em;
      margin-left: -5em;
      width: 10em;
    }
  }
</style>
